# This work differently from the other templates

#SDL = -D_REENTRANT -DSDL2 -lSDL2
#FONT = -lSDL2_ttf
#IMAGE = -lSDL2_image
#MIXER = -lSDL2_mixer
#SCRAP =
#FREETYPE = -lfreetype -lharfbuzz

# png and jpeg are needed for decoders in SDL_image, when not using emscripten preload api because its async
# which is the case for both pygbag or wasi (no browser, no emscripten js api emulation)
PNG = -lpng
JPEG = -ljpeg
DEBUG =

# these can build alone and object files merged with ar

_sdl2.sdl2 src/_sdl2/sdl2.c $(SDL) $(DEBUG) -Isrc

_sdl2.audio src/_sdl2/audio.c $(SDL) $(DEBUG) -Isrc

pygame_sdl2_video src/_sdl2/video.c src/pgcompat.c $(SDL) $(DEBUG) -Isrc
_sdl2.video = src/void.c


_sdl2.mixer src/_sdl2/mixer.c $(SDL) $(MIXER) $(DEBUG) -Isrc

constants src/constants.c $(SDL) $(DEBUG)
mask src/bitmask.c
math src/math.c $(SDL) $(DEBUG)

#GFX = src/SDL_gfx/SDL_gfxBlitFunc.c src/SDL_gfx/SDL_gfxPrimitives.c
GFX = src/SDL_gfx/SDL_gfxPrimitives.c


static src/static.c $(SDL) $(FREETYPE) $(FONT) $(MIXER) $(IMAGE) $(PNG) $(JPEG) $(DEBUG)

